{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "dist",

    "lib": ["es2020"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}